# Editor configuration, see http://editorconfig.org
root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
translate_tabs_to_spaces = true
trim_trailing_white_space_on_save = true

[*.md]
max_line_length = off
trim_trailing_whitespace = false
translate_tabs_to_spaces = true
trim_trailing_white_space_on_save = true
